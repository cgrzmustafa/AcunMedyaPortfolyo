@model List<AcunMedyaAkademiPortfolio.Models.TblAbout>
@{
    ViewBag.Title = "AboutList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hakkında Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>Hakkında Id</th>
        <th>Hakkında Başlığı</th>
        <th>Hakkında Açıklaması</th>
        <th>Hakkında Resim Yolu</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AboutID</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.ImageUrl</td>

            <td><a href="/About/DeleteAbout/@item.AboutID" class="btn btn-danger">Sil</a></td>
            <td><a href="/About/DeleteAbout/@item.AboutID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }

</table>

<a href="/About/CreateAbout/" class="btn btn-primary">Yeni Hakkında Girişi</a>
