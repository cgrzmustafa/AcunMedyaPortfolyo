
@{
    ViewBag.Title = "CreateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hakkında Ekleme Sayfası</h2>

<form method="post">
    <label>Hakkında ID</label>
    <input type="text" class="table table-bordered" name="AboutID" />
    <br />
    <label>Hakkında Başlığı</label>
    <input type="text" class="table table-bordered" name="Title" />
    <br />
    <label>Hakkında Açıklaması</label>
    <textarea rows="4" class="table table-bordered" name="Description"></textarea>
    <br />
    <label>Hakkında Resim Yolu</label>
    <input type="text" class="table table-bordered" name="ImageUrl" />
    <br />
    <button class="btn btn-info">Hakkındayı Kaydet</button>
</form>
