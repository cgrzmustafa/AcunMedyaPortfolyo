@model List<AcunMedyaAkademiPortfolio.Models.TblProject>

<div id="portfolio" class="section lb">
    <div class="container">
        <div class="section-title text-left">
            <h3>Projelerim</h3>
            <p>Bu alanda üzerinde çalıştığım projeler bulunuyor. Kullanıcı deneyimini ön planda tutarak modern ve responsive web arayüzleri geliştiriyorum.</p>
        </div>

        <div class="gallery-menu row">
            <div class="col-md-12">
                <div class="button-group filter-button-group text-left">
                    <button class="active" data-filter="*">All</button>
                    <button data-filter=".gal_a">Web Uygulamaları</button>
                    <button data-filter=".gal_c">Spor Uygulamaları</button>
                    <button data-filter=".gal_d">Banka ve Atm Uygulamaları</button>
                </div>
            </div>
        </div>

        <div class="gallery-list row">
            @foreach (var item in Model)
            {
                string categoryClass = "";

                if (item.CategoryId == 2)
                {
                    categoryClass = "gal_a";
                }
                else if (item.CategoryId == 4)
                {
                    categoryClass = "gal_c";
                }
                else if (item.CategoryId == 5)
                {
                    categoryClass = "gal_d";
                }

                <div class="col-md-4 col-sm-6 gallery-grid @categoryClass">
                    <div class="gallery-single fix">
                        <img src="@item.ImageUrl" class="img-fluid" alt="Project Image">
                        <div class="img-overlay">
                            <a href="@item.ImageUrl" data-rel="prettyPhoto[gal]" class="hoverbutton global-radius">
                                <i class="fa fa-picture-o"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
