
@{
    ViewBag.Title = "CreateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Özellik Ekleme Sayfası</h2>

<form method="post">
    <label>Özellik ID</label>
    <input type="text" class="table table-bordered" name="FeatureID" />
    <br />
    <label>Kullanıcı Adı Soyadı</label>
    <input type="text" class="table table-bordered" name="NameSurname" />
    <br />
    <label>Özellik Açıklaması</label>
    <textarea rows="4" class="table table-bordered" name="Description"></textarea>
    <br />
    <label>Proje İsmi</label>
    <input type="text" class="table table-bordered" name="ProjectName" />
    <br />
    <label>Resim</label>
    <input type="text" class="table table-bordered" name="Image" />
    <br />
    <button class="btn btn-info">Özelliği Kaydet</button>
</form>