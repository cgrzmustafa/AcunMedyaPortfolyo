
@{
    ViewBag.Title = "CreateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Servis Ekleme Sayfası</h2>

<form method="post">
    <label>Hizmet ID</label>
    <input type="text" class="table table-bordered" name="ServiceID" />
    <br />
    <label>Hizmet Başlığı</label>
    <input type="text" class="table table-bordered" name="Title" />
    <br />
    <label>Hizmet Açıklaması</label>
    <textarea rows="4" class="table table-bordered" name="Description"></textarea>
    <br />
    <label>Hizmet Resim Yolu</label>
    <input type="text" class="table table-bordered" name="ImageUrl" />
    <br />
    <button class="btn btn-info">Hizmeti Kaydet</button>
</form>